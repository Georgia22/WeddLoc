<% include ../partials/header %>

<div class='container'>
    <div class='row'>
        <div>
        <h1 style="text-align: center">Edit <%= location.name %></h1>
        <div style="width: 30%; margin: 25px auto;" class='form'>
            <form action="/locations/<%= location._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="location[name]" value="<%=location.name%>">
                </div>
                <div class='form-group'>
                <input class='form-control' type = 'number' name = 'location[price]' value='<%=location.price%>' min='0.01' step='0.01'>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location[image]" value="<%=location.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location[description]" value="<%=location.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/locations">Back</a>
    </div>
    </div>
</div>


<% include ../partials/footer %>